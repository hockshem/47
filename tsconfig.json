{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@models/*" : ["models/*"],
            "@serializables/*": ["models/serializable_models/*"],
            "@utils/*": ["src/utils/*"],
            "@commands/*": ["commands/*"]
        },
        "resolveJsonModule": true,
        "removeComments": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}